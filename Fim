				if(mapa3[29][1]=='&'){
					mapa3[11][33]=' ';
					mapa3[11][35]=' ';
					mapa3[12][33]=' ';
					mapa3[12][35]=' ';
					mapa3[13][34]=' ';
				}
				if(mapa3[11][34]=='&'){
					cont_mapa3++;
				}
				moveMon=rand()%4;
            	if (moveMon == 0){
               		if(mapa3[moveMonV-1][moveMonH]=='&'){
           				mapa3[moveVert][moveHori]=' ';
           				mapa3[moveMonV][moveMonH]=' ';
           				moveVert=1;
						moveHori=38;
						moveMonV=4;
						moveMonH=13;
						mapa3[moveVert][moveHori]='&';
           				mapa3[moveMonV][moveMonH]='X';
           				mortes++;
           				mapa3[32][37]='@';
           				mapa3[30][19]='D';
					}
                	if(mapa3[moveMonV-1][moveMonH]==' ' || mapa3[moveMonV-1][moveMonH]=='='){
                       	mapa3[moveMonV-1][moveMonH]='X';
                       	mapa3[moveMonV][moveMonH]=' ';
                      	moveMonV--;
                   	}
                }
                else if (moveMon == 1){
                   	if(mapa3[moveMonV+1][moveMonH]=='&'){
               			mapa3[moveVert][moveHori]=' ';
               			mapa3[moveMonV][moveMonH]=' ';
               			moveVert=1;
   						moveHori=38;
   						moveMonV=4;
    					moveMonH=13;
    					mapa3[moveVert][moveHori]='&';
               			mapa3[moveMonV][moveMonH]='X';
               			mortes++;
               			mapa3[32][37]='@';
               			mapa3[30][19]='D';
					}
                   	if(mapa3[moveMonV+1][moveMonH]==' ' || mapa3[moveMonV+1][moveMonH]=='='){
                   	    mapa3[moveMonV+1][moveMonH]='X';
                 	    mapa3[moveMonV][moveMonH]=' ';
                        moveMonV++;
                   	}	
                }
                else if (moveMon == 2){
       	        	if(mapa3[moveMonV][moveMonH+1]=='&'){
                		mapa3[moveVert][moveHori]=' ';
               			mapa3[moveMonV][moveMonH]=' ';
               			moveVert=1;
   						moveHori=38;
   						moveMonV=4;
    					moveMonH=13;
    					mapa3[moveVert][moveHori]='&';
               			mapa3[moveMonV][moveMonH]='X';
               			mortes++;
               			mapa3[32][37]='@';
               			mapa3[30][19]='D';
					}
                   	if(mapa3[moveMonV][moveMonH+1]==' ' || mapa3[moveMonV][moveMonH+1]=='='){
                       	    mapa3[moveMonV][moveMonH+1]='X';
                           	mapa3[moveMonV][moveMonH]=' ';
                           	moveMonH++;
                    }
                }
    			else if (moveMon == 3){
            	   	if(mapa3[moveMonV][moveMonH-1]=='&'){
                		mapa3[moveVert][moveHori]=' ';
               			mapa3[moveMonV][moveMonH]=' ';
               			moveVert=1;
   						moveHori=38;
   						moveMonV=4;
    					moveMonH=13;
    					mapa3[moveVert][moveHori]='&';
               			mapa3[moveMonV][moveMonH]='X';
               			mortes++;
               			mapa3[32][37]='@';
               			mapa3[30][19]='D';
					}
					if(mapa3[moveMonV][moveMonH-1]==' ' || mapa3[moveMonV][moveMonH-1]=='='){
    					mapa3[moveMonV][moveMonH-1]='X';
                 		mapa3[moveMonV][moveMonH]=' ';
                        moveMonH--;
                    }
				}
				//MONSTRO 2
				moveMon2=rand()%2;
            	if (moveMon2 == 0){
               		if(moveMonV2<moveVert){
               			if(mapa3[moveMonV2+1][moveMonH2]==' ' || mapa3[moveMonV2+1][moveMonH2]=='='){
                   	    mapa3[moveMonV2+1][moveMonH2]='V';
                 	    mapa3[moveMonV2][moveMonH2]=' ';
                        moveMonV2++;
                   		}	
					}
					else{
						if(mapa3[moveMonV2-1][moveMonH2]==' ' || mapa3[moveMonV2-1][moveMonH2]=='='){
                       	mapa3[moveMonV2-1][moveMonH2]='V';
                       	mapa3[moveMonV2][moveMonH2]=' ';
                      	moveMonV2--;
                   		}
					}
                }
                else if (moveMon2 == 1){
                	if(moveMonH2<moveHori){
               			if(mapa3[moveMonV2][moveMonH2+1]==' ' || mapa3[moveMonV2][moveMonH2+1]=='='){
                       	    mapa3[moveMonV2][moveMonH2+1]='V';
                           	mapa3[moveMonV2][moveMonH2]=' ';
                           	moveMonH2++;
                    	}
					}
					else{
               			if(mapa3[moveMonV2][moveMonH2-1]==' ' || mapa3[moveMonV2][moveMonH2-1]=='='){
	    					mapa3[moveMonV2][moveMonH2-1]='V';
	                 		mapa3[moveMonV2][moveMonH2]=' ';
	                        moveMonH2--;
                    	}
					}
                   	
				}
      			system("cls"); //limpa
		
				for(i3=0;i3<40;i3++){  //desenha
               		for(j3=0;j3<40;j3++){
						printf("%c ",mapa3[i3][j3]);   
           			}    
               		printf("\n");
				}
		}
            
            system("cls");
            if(mortes==3){
            	system("cls");
            	printf("                                                                                 \n");
				printf("                                                                                 \n");
				printf("       ########     #########    ###    ###   ##########                         \n");
				printf("       ##           ##     ##    ## #  # ##   ##                                 \n");
				printf("       ##           #########    ##  ##  ##   ##########                         \n");
				printf("       ##     ##    ##     ##    ##  ##  ##   ##                                 \n");
				printf("       #########    ##     ##    ##  ##  ##   ##########                         \n");
				printf("                                                                                 \n");
				printf("                                                                                 \n");	
				printf("       ##########  ##         ##  ##########   #########                         \n");
				printf("       ##      ##    ##      ##   ##           ##     ##                         \n");
				printf("       ##      ##     ##    ##    ##########   ##    ##                          \n");
				printf("       ##      ##      ##  ##     ##           ######                            \n");
				printf("       ##########        ##       ##########   ##    ##                          \n");
				printf("                                                                                 \n");
				printf("                                                                                 \n");
            	break;
			}	
					
		}
    
    
        //Tutorial
        else if(input==2){
        	system("cls");
            printf("\n\t@@====================================================@@");
	    	printf("\n\t||****************************************************||\n");
            printf("\t||****************************************************||\n");
            printf("\t||****************************************************||\n");
	    	printf("\t o  Pressione WASD para se mover\n");
            printf("\t o  Aperte I para interagir com o objeto acima de voce\n");
            printf("\t o  Se voce tocar em um espinho, voce recomeca a fase(se tocar 3x, o jogo reinicia).\n");
	    	printf("\t o  Se um monstro tocar em voce, voce recomeca a fase.\n");
	    	printf("\t o  Aperte uma tecla para voltar para o menu\n");
            printf("\t||****************************************************||\n");
            printf("\t||****************************************************||\n");
	        printf("\t@@====================================================@@\n\n");
	        
	        getch();
	        system("cls");
			
        }
        //Termino
        else if(input==3){
        		system("cls");
            	printf("@--------------------------------------------------------------------@\n");
				printf("|====================================================================|\n");
				printf("|=======  ***   *****   *****   *  *****   ****    ***   ***  =======|\n");
